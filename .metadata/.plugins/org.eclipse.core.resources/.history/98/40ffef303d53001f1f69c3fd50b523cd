package com.monocept.app.service;

import java.util.List;

import com.monocept.app.Dto.CourseResponseDTO;
import com.monocept.app.Dto.StudentResponseDTO;
import com.monocept.app.entity.Course;
import com.monocept.app.entity.Student;

import jakarta.validation.Valid;

public interface StudentCourseService {

	StudentResponseDTO addStudent(@Valid Student student);

	List<StudentResponseDTO> getStudents();

	StudentResponseDTO getStudentById(long id);

	StudentResponseDTO deleteStudentById(long id);

	CourseResponseDTO addCourse(@Valid Course course);

	List<CourseResponseDTO> getCourses();

	CourseResponseDTO geCourseById(long id);

	public void deleteCourseById(long id);

	CourseResponseDTO addCourseToStudent(long studentId, long courseId);

	CourseResponseDTO deleteCourseToStudent(long studentId, long courseId);

}
